// generate json counting features per organism in this gene tree
function phylotree_organism_json($phylotree_id) {
  
  $sql = 'SELECT n.phylonode_id, n.label as node_name, '.
    'f.name as feature_name, f.organism_id, '.
    'o.organism_id, o.genus, o.species, o.common_name ' .
    'FROM chado.phylonode n '.
    'LEFT JOIN chado.feature f ON n.feature_id = f.feature_id ' .
    'LEFT JOIN chado.organism o ON f.organism_id = o.organism_id '.
    'where  n.phylotree_id = :phylotree_id AND n.feature_id is not NULL';

  $args = array(':phylotree_id' => $phylotree_id);
  $result = chado_query( $sql, $args );

  $data = array();
  foreach ($result as $r) {
    if(! array_key_exists($r->organism_id, $data)) {
      $data[$r->organism_id] = array (
        'organism_id' => $r->organism_id,
        'value' => 1,
        'name' => sprintf('%s %s', $r->genus, $r->species),
        'children' => null,
      );
    }
    else {
      $data[$r->organism_id]['value'] ++;
    }
  }

  $result = array();
  foreach($data as $key => $value) {
    $result[] = $value;
  }
  
  drupal_json_output($result);
}

// generate json describing the tree structure with links to the features
function phylotree_json($phylotree_id) {

  $sql = 'SELECT n.phylonode_id, n.parent_phylonode_id, n.label as name, n.distance, '.
    'f.name as feature_name,'.
    'cvt.name as cvterm_name, cvt.definition as cvterm_definition '.
    'FROM chado.phylonode n '.
    'LEFT OUTER JOIN chado.feature f ON n.feature_id = f.feature_id ' .
    'LEFT OUTER JOIN chado.cvterm cvt ON n.type_id = cvt.cvterm_id '.
    'where n.phylotree_id = :phylotree_id';
  
  $args = array(':phylotree_id' => $phylotree_id);
  $result = chado_query( $sql, $args );

  // fetch all the phylonodes into an assoc array
  $rootPhylonode = null;
  foreach ($result as $r) {
    if($r->name == null) {
      $r->name = sprintf('distance: %.3f', $r->distance);
    }
    $phylonodes[ $r->phylonode_id ] = $r;
    $phylonodes[ $r->phylonode_id ]->children = array();
    if( $rootPhylonode == null && $r->parent_phylonode_id == null) {
      $rootPhylonode = $r;
      $rootPhylonode->name = 'root';
    }
  }

  /*
    this is an alternate method of generating json, but it's much too verbose
  $values = array( 'phylotree_id' => $phylotree_id);
  $phylonodes = chado_generate_var('phylonode', $values);
  */

  // build json like flare.json from the d3js examples (name; children... etc)
  
  //populate the children[] arrays for each 
  foreach( $phylonodes as $key => $pn ) {
    if($pn->parent_phylonode_id != null) {
      $parent = $phylonodes[ $pn->parent_phylonode_id ];
      $parent->children[] = $pn;
    }
  }

  // sort the children array by distance!
  foreach( $phylonodes as $key => $pn ) {
    usort($pn->children, 'phylonodeDistanceComparator');
  }
  
  drupal_json_output($rootPhylonode);
}

function phylonodeDistanceComparator($a, $b) {
  return ($a->distance < $b->distance) ? -1 : 1;
}


